<selector xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:shape="rectangle">
    <item app:state_value_decreased="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/rangebar_red"/>
        </shape>
    </item>

    <item app:state_value_unknown="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/foreground_light_grey"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/rangebar_green"/>
        </shape>
    </item>
</selector>