<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/return_edit_layout"
    style="@style/filtercard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/return_edit_label"
        style="@style/FilterItemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/potential_return"/>

    <EditText
        android:id="@+id/roi_edit_value"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/return_edit_label"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/return_edit_label"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textDirection="ltr"
        android:textIsSelectable="false"/>

    <TextView
        style="@style/FilterItemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/return_edit_label"
        android:layout_toEndOf="@id/roi_edit_value"
        android:text="@string/year"/>

</RelativeLayout>

