<?xml version="1.0" encoding="utf-8"?>

<!-- Spread Types filter -->

<LinearLayout
    android:id="@+id/spread_types_edit_layout"
    style="@style/filtercard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin">

    <TextView
        style="@style/FilterItemLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Vertical Spread Types"/>

    <TextView
        style="@style/HintTextSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:text="Select to include"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/DetailsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Debit"
            />

        <TextView
            style="@style/DetailsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Credit"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bullcall"
            style="@style/ListHeader.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/bull_spread_background"
            android:gravity="center_horizontal"
            android:text="Bull Call"
            />

        <TextView
            android:id="@+id/bullput"
            style="@style/ListHeader.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/bull_spread_background"
            android:gravity="center_horizontal"
            android:text="Bull Put"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bearput"
            style="@style/ListHeader.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/bear_spread_background"
            android:gravity="center_horizontal"
            android:text="Bear Put"
            />

        <TextView
            android:id="@+id/bearcall"
            style="@style/ListHeader.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/bear_spread_background"
            android:gravity="center_horizontal"
            android:text="Bear Call"
            />
    </LinearLayout>

</LinearLayout>

