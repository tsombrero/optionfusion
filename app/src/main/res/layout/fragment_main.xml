<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.mosoft.momomentum.ui.SpreadListFragment">


    <EditText
        android:id="@+id/edit_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:hint="@string/symbol"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/profitPercent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:hint="Monthly Return Percent"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:maxLines="1"
        android:singleLine="true"
        />

    <Button
        android:id="@+id/submit"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/submit"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/stockInfo"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:background="@color/header_inverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        >

        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            style="@style/Largest.Inverse"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            style="@style/Largest.Inverse"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/equityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmallSubhead.Inverse"
            android:gravity="start"
            android:layout_marginTop="-8dp"
            android:layout_below="@id/symbol"
            android:layout_alignParentStart="true"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

</LinearLayout>
