<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/stock_quote"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/primary"
              android:paddingBottom="5dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
    >

    <com.mosoft.optionfusion.ui.widgets.AutoFitTextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        style="@style/stockQuoteLabel"
        android:textColor="@android:color/white"
        tools:text="ABCD"
        />

    <com.mosoft.optionfusion.ui.widgets.AutoFitTextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        style="@style/stockQuoteData"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/white"
        tools:text="$223441.11"
        />

    <com.mosoft.optionfusion.ui.widgets.AutoFitTextView
        android:id="@+id/change"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        style="@style/stockQuoteData"
        android:layout_marginLeft="10dp"
        android:gravity="right"
        tools:text="+$223.11"
        />

    <ViewFlipper
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_drop_down_24dp"
            android:scaleType="centerInside"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_drop_up_24dp"
            android:scaleType="centerInside"
            />
    </ViewFlipper>

</LinearLayout>