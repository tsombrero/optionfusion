<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light"  >

    </style>

    <color name="subhead_medium_light">#bebebe</color>
    <color name="header_inverse">@color/material_deep_teal_500</color>

    <style name="ListHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@color/header_inverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="DetailsLabel" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:background">@color/subhead_medium_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailsValue" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="LargeSymbol" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

</resources>
