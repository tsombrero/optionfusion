<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"  >

    </style>

    <color name="subhead_medium_background">@color/material_grey_300</color>
    <color name="header_inverse">@color/material_deep_teal_500</color>
    <color name="green_900">#1B5E20</color>
    <color name="red_900">#B71C1C</color>
    <color name="primary_text">@android:color/primary_text_light</color>
    <color name="primary_text_inverse">@android:color/white</color>
    <color name="secondary_text">@color/material_grey_600</color>

    <color name="material_blue_grey_800">#ff37474f</color>
    <color name="material_blue_grey_900">#ff263238</color>
    <color name="material_blue_grey_950">#ff21272b</color>
    <color name="material_deep_teal_200">#ff80cbc4</color>
    <color name="material_deep_teal_500">#ff009688</color>
    <color name="material_grey_100">#fff5f5f5</color>
    <color name="material_grey_300">#ffe0e0e0</color>
    <color name="material_grey_50">#fffafafa</color>
    <color name="material_grey_600">#ff757575</color>
    <color name="material_grey_800">#ff424242</color>
    <color name="material_grey_850">#ff303030</color>
    <color name="material_grey_900">#ff212121</color>
    <color name="primary_dark_material_light">@color/material_grey_600</color>
    <color name="primary_material_light">@color/material_grey_100</color>
    <color name="primary_text_default_material_light">#de000000</color>
    <color name="primary_text_disabled_material_light">#39000000</color>
    <color name="ripple_material_light">#1f000000</color>
    <color name="secondary_text_default_material_light">#8a000000</color>
    <color name="secondary_text_disabled_material_light">#24000000</color>

    <style name="ListHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@color/header_inverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="DetailsLabel" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
    </style>

    <style name="DetailsLabel.Indented">
        <item name="android:layout_marginStart">@dimen/list_item_indent</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SmallSubhead" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
    </style>

    <style name="SmallSubhead.Inverse">
        <item name="android:textColor">@color/primary_text_inverse</item>
    </style>

    <style name="DetailsValue" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
    </style>

    <style name="Largest">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Largest.Inverse">
        <item name="android:textColor">@color/material_grey_100</item>
    </style>

    <style name="FilterItemLabel" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
    </style>

    <style name="FilterItemText" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingRight">@dimen/list_item_indent</item>
        <item name="android:paddingLeft">@dimen/list_item_indent</item>
    </style>

    <style name="FilterItemText.Active">
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
