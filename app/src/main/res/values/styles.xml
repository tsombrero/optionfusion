<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTheme" parent="AppTheme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="popupTheme">@style/Toolbar_Popup</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">@color/background</item>
        <item name="android:layout_marginTop">@dimen/list_item_padding_vertical</item>
    </style>

    <color name="background">@android:color/white</color>
    <color name="primary">@color/material_indigo_500</color>
    <color name="primary_dark">@color/material_indigo_700</color>
    <color name="primary_light">@color/primary</color>
    <color name="accent">@color/material_green_500</color>
    <color name="primary_text">@color/foreground_dark_grey</color>
    <color name="secondary_text">@color/foreground_middle_grey</color>
    <color name="icons">@color/primary_text</color>
    <color name="divider">@color/foreground_lightest_grey</color>

    <color name="subhead_medium_background">@color/material_grey_300</color>
    <color name="header_inverse">@color/primary</color>

    <color name="primary_text_inverse">@android:color/white</color>
    <color name="secondary_text_inverse">#B3FFFFFF</color>

    <color name="button_normal">@color/primary</color>
    <color name="button_disabled">@color/foreground_light_grey</color>
    <color name="button_pressed">@color/primary_light</color>
    <color name="button_selected">@color/primary_dark</color>

    <color name="bull_spread_background">@color/material_green_700</color>
    <color name="bear_spread_background">@color/primary</color>

    <color name="rangebar_green">@color/material_green_700</color>
    <color name="rangebar_red">@color/material_red_900</color>

    <!--<color name="material_deep_teal_100">#ffB2DFDB</color>-->
    <!--<color name="material_deep_teal_500">#ff009688</color>-->
    <!--<color name="material_deep_teal_700">#ff00796B</color>-->

    // accent candidates
    <color name="material_light_blue_500">#ff03A9F4</color>
    <color name="material_orange_500">#FFFF9800</color>
    <color name="material_orange_A700">#FFFF6D00</color>
    <color name="material_green_A400">#00E676</color>
    <color name="material_green_A700">#00C853</color>

    // handy colors
    <color name="material_blue_grey_500">#ff607D8B</color>
    <color name="material_blue_grey_700">#ff455A64</color>
    <color name="material_blue_grey_800" tools:override="true">#ff37474F</color>
    <color name="material_blue_grey_900" tools:override="true">#ff263238</color>

    <color name="material_blue_500">#ff2196f3</color>
    <color name="material_blue_700">#ff1976D2</color>

    <color name="material_green_500">#ff4caf50</color>
    <color name="material_green_700">#ff388E3C</color>
    <color name="material_green_900">#ff1B5E20</color>

    <color name="material_red_900">#ffB71C1C</color>

    <color name="material_indigo_100">#FFC5CAE9</color>
    <color name="material_indigo_500">#ff3f51b5</color>
    <color name="material_indigo_700">#ff303F9F</color>
    <color name="material_indigo_800">#ff283593</color>
    <color name="material_indigo_900">#ff1A237E</color>


    // greys
    <color name="material_grey_900">#ff212121</color>
    <color name="material_grey_850">#ff303030</color>
    <color name="material_grey_800">#ff424242</color>
    <color name="material_grey_600">#ff757575</color>
    <color name="material_grey_300">#ffe0e0e0</color>
    <color name="material_grey_100">#fff5f5f5</color>
    <color name="material_grey_50">#fffafafa</color>

    // for text
    <color name="foreground_middle_grey">#8a000000</color>
    <color name="foreground_dark_grey">#de000000</color>
    <color name="foreground_light_grey">#39000000</color>
    <color name="foreground_lightest_grey">#24000000</color>
    <color name="foreground_ghost">#18000000</color>

    <color name="text_hint_inverse">#4CFFFFFF</color>
    <color name="text_hint">@color/foreground_lightest_grey</color>

    <style name="ListHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
    </style>

    <style name="ListHeader.Inverse">
        <item name="android:textColor">@color/primary_text_inverse</item>
    </style>

    <style name="DetailsLabel" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="DetailsLabel.Inverse">
        <item name="android:textColor">@color/secondary_text_inverse</item>
        <item name="android:background">@color/primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DetailCellValue" parent="DetailsLabel">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/foreground_ghost</item>
    </style>

    <style name="DetailsLabel.Indented">
        <item name="android:layout_marginStart">@dimen/list_item_indent</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SmallSubhead" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SmallSubhead.Inverse">
        <item name="android:textColor">@color/primary_text_inverse</item>
    </style>

    <style name="DetailsValue" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
    </style>

    <style name="DetailsValueCentered" parent="@style/DetailsValue">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="Largest">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Large">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Largest.Inverse">
        <item name="android:textColor">@color/material_grey_100</item>
    </style>

    <style name="FilterItemLabel" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="FilterItemText" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingRight">@dimen/list_item_indent</item>
        <item name="android:paddingLeft">@dimen/list_item_indent</item>
    </style>

    <style name="FilterItemText.Active">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="FilterButton">
        <item name="android:tint">@color/primary_text_inverse</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="elevation">@dimen/widget_elevation_resting</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FilterButtonText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/filter_button_color</item>
        <item name="elevation">@dimen/widget_elevation_resting</item>
    </style>

    <style name="card">
        <item name="android:background">@android:color/white</item>
        <item name="elevation">@dimen/widget_elevation_resting</item>
        <item name="android:layout_marginTop">@dimen/card_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/card_horizontal_margin</item>
    </style>

    <style name="HintText" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HintTextSmall" parent="HintText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="rangebar" parent="android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="barColor">@color/foreground_light_grey</item>
        <item name="barWeight">3dp</item>
        <item name="connectingLineColor">@color/primary</item>
        <item name="selectorColor">@color/primary</item>
        <item name="connectingLineWeight">2dp</item>
        <item name="pinAlwaysVisible">true</item>
        <item name="pinColor">@color/accent</item>
        <item name="pinPadding">2.5dp</item>
        <item name="pinScaleMin">0</item>
        <item name="pinHeight">0dp</item>
        <item name="pinWidth">0dp</item>
        <item name="selectorSize">3dp</item>
        <item name="textColor">@color/primary_text_inverse</item>
        <item name="tickColor">@color/foreground_light_grey</item>
        <item name="tickHeight">0dp</item>
        <item name="barPaddingBottom">10dp</item>
    </style>

    <style name="RangebarValue" parent="android:style/TextAppearance.Large">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="filtercard" parent="card">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="primaryText" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="primaryText.Inverse">
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="secondaryText" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="secondaryTextInverse" parent="secondaryText">
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="stockQuoteLabel" parent="primaryText">
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="stockQuoteLabelSubhead" parent="smallCaps">
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="stockQuoteData" parent="stockQuoteLabel">
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="stockQuoteDataInverse" parent="stockQuoteData">
        <item name="android:textColor">@color/primary_text_inverse</item>
    </style>

    <style name="suggestion" parent="android:style/TextAppearance.Medium">
        <item name="android:background">?android:background</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="suggestionSubtitle" parent="smallCaps">
        <item name="android:background">?android:background</item>
    </style>

    <style name="smallCaps">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="listView">
        <item name="android:layout_marginLeft">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="button" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
